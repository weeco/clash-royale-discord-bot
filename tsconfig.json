{
    "compilerOptions": {
      "module": "commonjs",
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "dist"
    },
    "include": [
      "src/**/*"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  